---
import TypographyLink from "@components/TypographyLink/TypographyLink.astro"

type Props = {
  className?: string
  light?: boolean
}
const { className, light } = Astro.props

const LINKS = [
  { href: "/", light: !!light, label: "Home" },
  { href: "/about/", light: !!light, label: "About" },
  { href: "/algo-structs/", light: !!light, label: "Alghoritms & Structures" },
  { href: "/travel/", light: !!light, label: "Travel" }
]
---

<nav class:list={["font-semibold", className]}>
  {
    LINKS.map((link) => (
      <TypographyLink href={link.href} light={link.light}>
        {link.label}
      </TypographyLink>
    ))
  }
</nav>
