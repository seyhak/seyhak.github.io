---
import "./TypographyLink.sass"
type Props = {
  href: string
  light?: boolean
}
const { href, light } = Astro.props
---

<a
  href={href}
  class:list={[
    light
      ? [
          "transition-shadow ease-in-out text-blue-0 duration-300 delay-150 hover:text-white",
          "hower:shadow hower:shadow-red-500"
        ]
      : [
          "transition-shadow ease-in-out duration-300 delay-150 hover:text-gray-700 dark:hover:text-white"
        ],
    "dark:text-blue-0 TypographyLink"
  ]}
>
  <slot />
</a>
